@model Esercizio_finale_s7.Models.Autorizzazione

@{
    ViewBag.Title = "Login";
}

<div class="container body-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
                <div class="col-md-6 col-lg-7">
                    <div class="card-body p-4 p-lg-5 text-black">
                        <div class="d-flex align-items-center mb-3 pb-1">
                            <div class="d-flex flex-column">
                                <span class="h1 fw-bold mb-0">Magnate Questa Pizzeria Romana</span>
                                <span class="h3 text-danger fw-bold mb-0">Entra</span>
                            </div>
                        </div>
                        <div id="inputlogin" class="form-outline mb-4">
                            <div class="mb-3">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-lg", placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @style = "color: red" })
                            </div>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-lg", placeholder = "Password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color: red" })
                        </div>
                        @if (ViewBag.AuthError != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.AuthError
                            </div>
                        }
                        <div class="pt-1 mb-4 d-flex align-items-center">
                            <input type="submit" value="Entra" class="btn btn-danger" />
                        </div>
                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                            Non hai un account?
                            @Html.ActionLink("Registrati qui", "Registrazione", "Home", null, new { style = "color: #393f81;" })
                        </p>
                        <br />
                    </div>
                </div>
                <div class="col-md-6 col-lg-5 d-flex align-items-center justify-content-center">
                    <img src="~/Content/Images/logo.png" alt="login form" class="img-fluid w-100" />
                </div>
            </div>
        </div>
    }
</div>
