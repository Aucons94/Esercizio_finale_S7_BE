@model Esercizio_finale_s7.Models.Prodotto

@{
    ViewBag.Title = "Details";
}

<div class="background-custom p-4 rounded 4">
    <h2>Dettagli Prodotto</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dd>
                <img src="~/Content/Images/@Model.Foto" class="img-thumbnail" alt="Immagine Prodotto" style="max-height: 180px;" />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Prezzo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Prezzo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TempoConsegna)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TempoConsegna)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Ingredienti)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Ingredienti)
            </dd>

        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Home", "Home", "Home", new { area = "" }, new { @class = "my-4 btn btn-outline-primary", style = "text-decoration: none;" }) 

            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                @Html.ActionLink("Vai alla Modifica", "Edit", new { id = Model.IdProdotto }, new { @class = "my-4 btn btn-outline-primary", style = "text-decoration: none;" }) 
                @Html.ActionLink("Ritorna alla lista Prodotti", "Index", null, new { @class = "mt-2 mb-2 btn btn-outline-primary", style = "text-decoration: none;" })
            }
        </div>
    </div>
</div>