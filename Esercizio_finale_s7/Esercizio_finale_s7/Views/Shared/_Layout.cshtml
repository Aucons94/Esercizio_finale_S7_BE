<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="border-bottom: 1px solid black">
        <div class="container">
            <a href="@Url.Action("Home", "Home")" class="navbar-brand"><img src="~/Content/imgs/logo.png" style="width:50px" /></a>
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Admin"))
                {
                    <div class="mx-5 collapse navbar-collapse d-flex justify-content-start">
                        <div class="d-flex btn btn-outline-danger">
                            <ul style="list-style: none" class="m-0 p-0">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Menu Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        @Html.ActionLink("Gestione Prodotti", "Index", "Prodotto", new { area = "" }, new { @class = "nav-link mx-3" })
                                        <li><hr /></li>
                                        @Html.ActionLink("Gestione Utenti", "Index", "Utente", new { area = "" }, new { @class = "nav-link mx-3" })
                                        <li><hr /></li>
                                        @Html.ActionLink("Gestione Ordini", "Index", "Ordine", new { area = "" }, new { @class = "nav-link mx-3" })
                                        <li><hr /></li>
                                        @Html.ActionLink("Controllo Ordini", "Index", "Ordine", new { area = "" }, new { @class = "nav-link mx-3" })
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="d-flex btn btn-outline-secondary">
                        <ul style="list-style: none" class="m-0 p-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Ciao @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Profilo", "Profilo", "Home", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li><hr /></li>
                                    <li>@Html.ActionLink("Carrello", "VisualizzaCarrello", "Home", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li><hr /></li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="d-flex btn btn-outline-secondary">
                        <ul style="list-style: none" class="m-0 p-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Ciao @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Profilo", "Profilo", "Home", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li><hr /></li>
                                    <li>@Html.ActionLink("Carrello", "VisualizzaCarrello", "Home", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Miei Ordini", "ListaOrdine", "Ordine", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li><hr /></li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                }
            }
            else
            {
                @Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link mx-3" });
            }
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="mt-5" style="background-color: #ffd4b6">
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
